<%= form_for @transfer do |f| %>
    <% if action_name == "send_payment" %>

        <% if @receiver %>
            <p> Sending payment to <%= @receiver.display_name %> </p>
        <% else %>
            <div class = "input_label">
                <%= f.label "Send payment to: " %>
            </div>
            <%= f.collection_select :receiver, User.all.where.not(id: current_user.id), :id, :display_name %>
        <% end %>

    <% elsif action_name == "request_payment" %>

        <% if @sender %>
            <p> Requesting payment from to <%= @sender.display_name %> </p>
        <% else %>
            <div class = "input_label">
                <%= f.label "Request payment from: " %>
            </div>
            <%= f.collection_select :sender, User.all.where.not(id: current_user.id), :id, :display_name %>
        <% end %>

    <% end %>
<% end %>

