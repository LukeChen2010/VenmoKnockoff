<%= form_for @user do |f| %>

    <div class = "input_label">
        <%= f.label "Username:" %>
     </div>
    
    <%= f.text_field :username, required: true %>

    <br><br>

    <div class = "input_label">
        <%= f.label "Display name:" %>
    </div>

    <%= f.text_field :display_name, required: true %>
    
    <br><br>

    <div class = "input_label">
        <%= f.label "Password:" %>
    </div>

    <%= f.text_field :password, :type => "password", required: true %>
    
    <br><br>

    <div class = "input_label">
        <%= f.label "Confirm password:" %>
    </div>

    <%= f.text_field :password_confirmation, :type => "password", required: true %>
    
    <br><br>

    <%= f.submit "Create", :class => "button" %>

<% end %>

<% if @user.errors.any? %>
    <div class="error_explanation">
        <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
        <% end %>
    </div>
<% end %>