<h2> Settings </h2>
<h3> Your wallet: <%= number_to_currency(@user.balance) %> </h3>

<%= form_tag user_path(@user), method: "put" do %>

    <div class = "input_label">
        <label> Change display name: </label> <br>
    </div>

    <%= text_field_tag :'user[display_name]' %> <br>

    <br>
    <br>

    <div class = "input_label">
        <label> Add funds: </label> <br>
    </div>

    <%= number_field_tag :'user[add_funds]', nil, options = {min: 0, step: 0.01} %> <br>

    <br>
    <br>

    <%= submit_tag "Submit", :class => "button" %>

<% end %>

<% if @user.errors.any? %>
    <div class="error_explanation">
        <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
        <% end %>
    </div>
<% end %>